<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/users/signup" method="POST">
            <div class="form-control">
                <label for="firstName" required  >First Name</label>
                <input type="text" name="firstName" id="email">
            </div>
            <div class="form-control">
                <label for="lastName" required >Last Name</label>
                <input type="text" name="lastName" id="email">
            </div>
            <div class="form-control">
                <label for="email" required >E-Mail</label>
                <input type="email" name="email" id="email">
            </div>
            <div class="form-control">
                <label for="password" required >Password</label>
                <input type="password" name="password" id="password">
            </div>
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>